{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@assets/*": ["assets/*"],
      "@layouts/*": ["layouts/*"],
      "@routes/*": ["routes/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src"]
}

